@model HospitalWebApp.Models.Appointment

@{
    ViewData["Title"] = "Edit";
}

<br />
<h4>Edit Appointment</h4>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="patientId" class="control-label"></label>
                <select asp-for="patientId" class="form-control" asp-items="ViewBag.patientId"></select>
                <span asp-validation-for="patientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="doctorId" class="control-label"></label>
                <select asp-for="doctorId" class="form-control" asp-items="ViewBag.doctorId"></select>
                <span asp-validation-for="doctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointedTime" class="control-label"></label>
                <input asp-for="AppointedTime" class="form-control" />
                <span asp-validation-for="AppointedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomNr" class="control-label"></label>
                <input asp-for="RoomNr" class="form-control" />
                <span asp-validation-for="RoomNr" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn text-white" style="background-color:forestgreen" />
                <a  class="btn btn-secondary" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
