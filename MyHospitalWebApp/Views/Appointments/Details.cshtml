@model HospitalWebApp.Models.Appointment

@{
    ViewData["Title"] = "Details";
}
    <br />
<div>
    <h4>Appointment Details</h4>
    <br />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class="col-sm-10">
            @(Model.Patient.firstName + " " + Model.Patient.lastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor)
        </dt>
        <dd class="col-sm-10">
            @(Model.Doctor.firstName + " " + Model.Doctor.lastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppointedTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppointedTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomNr)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomNr)
        </dd>
    </dl>
</div>
<div>
    <a class="btn text-white" style="background-color:forestgreen;" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</div>
