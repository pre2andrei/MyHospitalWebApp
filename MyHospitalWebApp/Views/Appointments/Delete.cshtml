@model HospitalWebApp.Models.Appointment

@{
    ViewData["Title"] = "Delete";
}
<br />
<h3>Are you sure you want to delete this appointment?</h3>
<br />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.PIC)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Doctor.PIC)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AppointedTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AppointedTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomNr)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomNr)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
    <a class="btn btn-secondary" asp-action="Index">Back</a>
    </form>
</div>
