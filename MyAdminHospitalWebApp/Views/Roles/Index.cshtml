@model List<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<h1>Roles</h1>

<p>
    <a asp-action="CreateRole">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().NormalizedName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ConcurrencyStamp)
            </th>
           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               @(item.Id)
            </td>
            <td>
               @(item.Name)
            </td>
            <td>
               @(item.NormalizedName)
            </td>
            <td>
               @(item.ConcurrencyStamp)
            </td>
            
        </tr>
}
    </tbody>
</table>